<%= form_with(model: @task, remote: true) do |form| %>

  <div class="form-group">
    <%= form.text_field :description, placeholder: "tasks description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :deadline, id: :datetimepicker1, placeholder: "When is it due?", class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add Task", class: "btn btn-info" %>
  </div>
<% end %>
